doctype html
html
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge7')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://use.fontawesome.com/releases/v5.0.6/css/all.css', rel='stylesheet')
  body
    header(class="clearfix")
      .menu
        div(id="nav-drawer")
          input(id="nav-input", type="checkbox", class="nav-unshown")
          label(id="nav-open",  for="nav-input")
            span
          label(class="nav-unshown", id="nav-close", for="nav-input")
          div(id="nav-content")
            .head
              label.nav-unshown(for="nav-input") MENU
            .navigation
              nav
                a(href="/") ホーム
                if loginUser
                  a(href="/spaces/add") スペースを追加
      .logo
         a(href="/")
           img(src="/images/logo.png" width="40" height="40")
      .login
        if loginUser
          span.login-user
            - var fbuser = loginUser.photos
            if fbuser
              img.profile-img(class="profile-img", src="#{loginUser.photos[0].value}")
            else
              span #{loginUser}
          span.nav-logout
            a(href="/logout") ログアウト
        else
          span.nav-login ログイン
    .container
      block content
    .overlay
      .modal
        .panel
          a(href="/auth/facebook", class="fb-login comp-ui") Facebookでログイン
        button(type="button", class="close comp-ui") close
    script(src="/javascripts/bundle.js")
