extends ../layout

block content
  .container
    form(method="post", action="/mypage/edit/#{user.userId}")
      .form-spaces
        .form-elem
          label.comp-ui ユーザー名
          p #{user.username}
        .form-elem
          label.comp-ui Photo
          p
            img(src="#{user.photoUrl}")
        .form-elem
          label.comp-ui(id="display-name") ニックネーム
            input.comp-ui(type="text", name="displayName", value="#{user.displayName}", id="display-name")
        button.comp-ui(type="submit") 更新
