extends ../layout

block content
  .container
    form(method="post", action="/admin/users/update/#{user.spaceId}")
      .form-spaces
        .form-elem
          label.comp-ui ID
            input.comp-ui(type="text" name="userId" value="#{user.userId}")
        .form-elem
          label.comp-ui ユーザー名
            input.comp-ui(type="text" name="username" value="#{user.username}")
        .form-elem
          label.comp-ui Profile URL
            input.comp-ui(type="text" name="profileUrl" value="#{user.profileUrl}")
        .form-elem
          label.comp-ui Photo URL
            input.comp-ui(type="text" name="slackChannel" value="#{user.photoUrl}")
        button.comp-ui(type="submit") 更新
